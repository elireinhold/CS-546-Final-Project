<div>
    <form action="/users/register" method="post" id="register-form">
        <div>
            <label for="username">
                Username
            </label>
            <input type="text" name="username" id="username">
        </div>
        <div>
            <label for="firstName">
                First Name
                <input type="text" name="firstName" id="firstName">
            </label>
        </div>
        <div>
            <label for="lastName">
                Last Name
                <input type="text" name="lastName" id="lastName">
            </label>
        </div>
        <div>
            <label for="password">
                Password
                <input type="password" name="password" id="password">
            </label>
        </div>
        <div>
            <label for="preferedBorough">
                Preferred Borough
                <select name="preferedBorough" id="preferedBorough">
                    <option value="">...</option>
                    <option>The Bronx</option>
                    <option>Brooklyn</option>
                    <option>Manhattan</option>
                    <option>Queens</option>
                    <option>Staten Island</option>
                </select>
            </label>
        </div>
        <div>
            <label for="prefEventType">
                Preferred Event Type
                <select name="prefEventType" id="prefEventType">
                    <option value="">???</option>
                </select>
            </label>
        </div>
        <div>
            <label for="birthday">
                Password
                <input type="date" name="birthday" id="birthday">
                <!-- TODO: add min/max values based on current day (handelbars??)-->
                <!-- Min: 13 years to day... Max; 122 years to day -->
            </label>
        </div>
        <div>
            <input type="submit" name="submit" id="submit">
        </div>
        <input type="hidden" name="formType" value="register">
        <!-- Orginazational idea -->
    </form>
</div>